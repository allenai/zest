                          <div id="overlaps"></div>
                          <div class="row" id="workContent">
                            <div class="col-xs-12 col-sm-8 content">
                              <div id="well" class="ann well"></div>
                            </div>
                            <div class="col-xs-12 col-sm-4 fields">
                              <div id="button-div">
                                <button type="button" id="previous" value="previous" class="btn btn-primary">
                                  <span class="glyphicon glyphicon-remove"></span> Previous
                                </button>
                                <button type="button" id="next" value="next" class="btn btn-success">
                                  <span class="glyphicon glyphicon-remove"></span> Next 
                                </button>
